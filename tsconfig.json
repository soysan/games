{
    "compilerOptions": {
        "esModuleInterop": true,
        "jsx": "react",
        "module": "esnext",
        "moduleResolution": "node",
        "lib": [
            "dom",
            "esnext"
        ],
        "strict": true,
        "sourceMap": true,
        "target": "esnext",
        "allowJs": true,
        "checkJs": true
    },
    "include": ["src/**/*"],
    "exclude": [
        "node_modules",
        "build"
    ]
}
